<?xml version="1.0" encoding="utf-8"?>
<appengine-web-app xmlns="http://appengine.google.com/ns/1.0">
  <runtime>java17</runtime>

  <sessions-enabled>true</sessions-enabled>

  <automatic-scaling>
    <max-instances>1</max-instances> 
    
    <max-pending-latency>30ms</max-pending-latency>
  </automatic-scaling>
  
  <env-variables>
    <env-var name="DATASTORE_KIND" value="User" />
    <env-var name="BIGQUERY_DATASET" value="user_backup" />
    <env-var name="BIGQUERY_TABLE" value="users" />
    <env-var name="ADMIN_SECRET" value="my-super-secret-key-2026" />
  </env-variables>
</appengine-web-app>